{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "max-line-length": [false]
    },
    "import-spacing": true,
    "indent": [true, "tabs", 4],
    "max-line-length": 200
}
